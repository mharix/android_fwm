<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
    tools:context=".ui.eventRegDetails">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.3dp"
                android:orientation="horizontal">


                <customfonts.MyTextView_Poppins_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="32dp"
                    android:gravity="center_horizontal"
                    android:text="Event Report "
                    android:textColor="#333232"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="14.5dp">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="35.6dp"
                    android:background="@drawable/rectangle">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="19dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/eventName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="Event Name"
                          android:textSize="30dp"
                            android:textColor="#00695C"
                            android:textStyle="bold"
                            android:gravity="center_vertical|center_horizontal"
                            />




                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
            <TextView
                android:id="@+id/noofGuests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Total Guests :"
                android:textSize="20dp"
                android:textColor="#00695C"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guests Food Preferences"
                android:textSize="20dp"
                android:textColor="#00695C"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="3.5dp"
                android:paddingRight="3.5dp"
                >


                <View
                    android:layout_width="5.6dp"
                    android:layout_height="420dp"
                    android:background="#00695C" />


                <ScrollView
                    android:layout_width="320dp"

                    android:layout_height="match_parent">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10.6dp"
                        android:background="@drawable/rectangle">

                        <LinearLayout
                            android:id="@+id/checkboxList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13dp"
                            android:layout_marginRight="19dp"
                            android:orientation="vertical">






                        </LinearLayout>



                    </LinearLayout>

                </ScrollView>

                <View
                    android:layout_width="5.6dp"
                    android:layout_height="420dp"
                    android:background="#00695C"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/nextToHome"
                android:layout_width="120dp"
                android:layout_height="31dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/half_blue_roundshape"
                android:gravity="center"
                android:orientation="vertical">

                <customfonts.MyTextView_Poppins_SemiBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Exit"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />


            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>